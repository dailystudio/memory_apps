<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/card_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_content_height">
    
	<TextView
        android:id="@+id/card_title"
        style="@style/CardTitle"
        android:background="@drawable/card_footer_bg"
        android:layout_alignParentBottom="true"
		android:paddingTop="@dimen/card_item_vpadding"
		android:paddingBottom="@dimen/card_item_vpadding"
		android:paddingLeft="@dimen/card_item_hpadding"
		android:paddingRight="@dimen/card_item_hpadding"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>

    <com.dailystudio.memory.ui.CardWebView
        android:id="@+id/card_webview"
        android:background="@drawable/card_content_bg"
		android:paddingLeft="@dimen/card_item_hpadding"
		android:paddingRight="@dimen/card_item_hpadding"
        android:layout_alignParentTop="true"
        android:layout_above="@id/card_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
    
 </RelativeLayout>
