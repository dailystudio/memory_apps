<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
    <fragment
		android:id="@+id/fragment_google_map"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <fragment 
		android:id="@+id/fragment_environment_overlay"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:name="com.dailystudio.memory.where.fragment.EnvironmentFragment"/>
    
    <fragment
		android:id="@+id/fragment_idspots_list"
		android:name="com.dailystudio.memory.where.fragment.NowWhereIdspotListFragment"
		android:layout_alignParentRight="true"
		android:layout_width="@dimen/nw_idspots_list_width"
		android:layout_height="@dimen/nw_idspots_list_height"/>
    
    <fragment
		android:id="@+id/fragment_weather"
		android:name="com.dailystudio.memory.where.fragment.WeatherFragment"
		android:layout_marginLeft="@dimen/weather_panel_margin"
		android:layout_marginTop="@dimen/weather_panel_margin"
		android:layout_width="@dimen/weather_panel_width"
		android:layout_height="@dimen/weather_panel_height"/>
    
</RelativeLayout>
