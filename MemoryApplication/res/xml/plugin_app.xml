<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns:android="http://schemas.android.com/apk/res/android"
	label="@string/plugin_label_app"
	icon="@drawable/ic_app"
	privacy="@xml/app_privacy_policy"
	searchableAuthority="com.dailystudio.memory.app.searchable">
    	
	<task name=".ActivityUsageTask"
		label="@string/task_label_activity_usage"
    	type="conditional"/>
    
	<task name=".AppInstHistoryCheckTask"
		label="@string/task_label_app_inst_history_check"
    	executePeroidMillis="86400000"/>

	<task name=".UselessAppsCheckTask"
		label="@string/task_label_useless_apps_check"
    	executePeroidMillis="86400000"/>

	<task name=".FavoriteAppsCheckTask"
		label="@string/task_label_favorite_apps_check"
    	executePeroidMillis="86400000"/>
		
</plugin>    	